<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/top_bar">

        <ImageButton
            android:id="@+id/returnLogo_imgButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:src="@drawable/returnlogo"
            android:scaleType="fitXY"
            android:background="#00000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:elevation="5dp"
        android:background="@drawable/circlecornersmallllbgnormal">

        <LinearLayout
            android:id="@+id/rebootComputer_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/linearlayout_selector03">

            <ImageView
                android:clickable="false"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/reboot"
                android:scaleType="fitCenter"
                android:background="#00000000" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:text="重启电脑"
                android:textColor="#000000"
                android:textSize="12sp"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/rebootComputer_moreInforIV"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:padding="2dp"
                android:layout_weight="1"
                android:src="@drawable/infor"
                android:scaleType="fitCenter"
                android:background="#00000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="0.1sp"
                android:layout_weight="1" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0.01sp"
                android:layout_weight="5"
                android:background="#44000000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkExe_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/linearlayout_selector03">

            <ImageView
                android:clickable="false"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/scanexe"
                android:scaleType="fitCenter"
                android:background="#00000000" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="查看应用"
                android:textColor="#000000"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/checkExe_moreInforIV"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:padding="2dp"
                android:layout_weight="1"
                android:src="@drawable/infor"
                android:scaleType="fitCenter"
                android:background="#00000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="0.1sp"
                android:layout_weight="1" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0.01sp"
                android:layout_weight="5"
                android:background="#44000000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/regEdit_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/linearlayout_selector03">

            <ImageView
                android:clickable="false"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/registeroperator"
                android:scaleType="fitCenter"
                android:background="#00000000" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="操作注册表"
                android:textSize="12sp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/regEdit_moreInforIV"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:padding="2dp"
                android:layout_weight="1"
                android:src="@drawable/infor"
                android:scaleType="fitCenter"
                android:background="#00000000" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>