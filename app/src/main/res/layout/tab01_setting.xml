<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/top_bar"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <ImageButton
                android:id="@+id/settingBackBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/returnlogo"
                android:scaleType="fitXY"
                android:background="#00000000"
                android:layout_gravity="left|center_vertical"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:elevation="2dp"
        android:background="@drawable/circlecornersmallllbgnormal">

        <LinearLayout
            android:id="@+id/changeUserNameLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/linearlayout_selector03">

            <ImageView
                android:clickable="false"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/icon_changename"
                android:scaleType="fitCenter"
                android:background="#00000000" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:text="修改昵称"
                android:textColor="#000000"
                android:textSize="12sp"
                android:gravity="center_vertical"/>
            <ImageView
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:padding="0dp"
                android:layout_weight="1"
                android:src="@drawable/logo_access"
                android:scaleType="fitCenter"
                android:background="#00000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="0.1sp"
                android:layout_weight="1" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0.01sp"
                android:layout_weight="5"
                android:background="#44000000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/changeUserPwdLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/linearlayout_selector03">

            <ImageView
                android:clickable="false"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/icon_changepwd"
                android:scaleType="fitCenter"
                android:background="#00000000" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="修改密码"
                android:textColor="#000000"
                android:textSize="12sp" />
            <ImageView
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/logo_access"
                android:scaleType="fitCenter"
                android:background="#00000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="0.1sp"
                android:layout_weight="1" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0.01sp"
                android:layout_weight="5"
                android:background="#44000000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/changeUserAddressLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/linearlayout_selector03">

            <ImageView
                android:clickable="false"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/icon_changelocation"
                android:scaleType="fitCenter"
                android:background="#00000000" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="修改地区"
                android:textSize="12sp"
                android:textColor="#000000"/>
            <ImageView
                android:id="@+id/regEdit_moreInforIV"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/logo_access"
                android:scaleType="fitCenter"
                android:background="#00000000" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:elevation="2dp"
        android:background="@drawable/circlecornersmallllbgnormal">

        <LinearLayout
            android:id="@+id/updateVersionLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/linearlayout_selector03">

            <ImageView
                android:clickable="false"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/icon_refresh"
                android:scaleType="fitCenter"
                android:background="#00000000" />
            <TextView
                android:id="@+id/newVersionInforTV"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:text="已更新到最新版本"
                android:textColor="#000000"
                android:textSize="12sp"
                android:gravity="center_vertical"/>
            <ImageView
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/logo_access"
                android:scaleType="fitCenter"
                android:background="#00000000" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>