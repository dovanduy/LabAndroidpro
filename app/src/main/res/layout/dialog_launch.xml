<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialogback04">

    <TextView
        android:id="@+id/exittitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:text="APP首次运行说明"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dcdcdc" />


        <TextView
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="5dp"
            android:text="        AreaParty系统将为您提供集成手机、电脑、电视、机顶盒、NAS硬盘、U盘等设备的全新家庭娱乐体验！"
            android:textColor="#555"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
        android:textColor="#555"
        android:text="        AreaParty包括移动端（APP）、电脑端、电视端三种软件组件。用户在公开测试期安装相应组件将可以免费获得腾讯、优酷、乐视视频VIP账号分享的福利！"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:textColor="#555"
        android:text="        每月1日开始发放当月免费名额，先到先得。请在移动端（APP）首页点击网络视频库，然后在视频应用VIP分享栏目点击申请（使用前请务必查看栏目右上角使用帮助）。"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RadioButton
        android:id="@+id/radioButton"
        android:layout_marginStart="17dp"
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555"
        android:text="不再提示" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <Button
            android:id="@+id/exitnegativeButton"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/buttonback04"
            android:text="取消"
            android:textColor="#007DFF"
            android:textSize="16sp"
            android:gravity="center" />

        <Button
            android:id="@+id/exitpositiveButton"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:background="@drawable/buttonback04"
            android:text="确定"
            android:textColor="#E65757"
            android:textSize="16sp"
            android:gravity="center" />
    </LinearLayout>


</LinearLayout>

