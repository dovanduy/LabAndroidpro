<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/webmanager_movietext_color"
    
    
    android:gravity="center_vertical"  
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView_Movie"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/webmanager_tab_movieseed_pressed" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

          <TextView
        android:id="@+id/ChineseMovieName"
       
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:text="中文名字" />

          <TextView
              android:id="@+id/EnglishMovieName"
              android:layout_width="wrap_content"
              android:layout_height="20dp"
              android:text="english name" />

          <TextView
              android:id="@+id/MovieType"
              android:layout_width="wrap_content"
              android:layout_height="20dp"
              android:textSize="18sp"
              android:text="电影类别" />

    <TextView
        android:id="@+id/movieCountryTimeSize"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="国家/时长/大小"
        android:textSize="18sp" />
    </LinearLayout>

  

</LinearLayout>
