<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:id="@+id/typeNameTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="#8000"
            android:text="音频: "
            android:textSize="14sp"
            />
        <com.dkzy.areaparty.phone.fragment02.view.AlwaysMarqueeTextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:gravity="bottom"
            android:textColor="#8000"
            android:text="测试.mp3"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/addNewSetLL"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:paddingTop="8dp"
            android:paddingStart="6dp"
            android:paddingEnd="10dp"
            android:paddingBottom="6dp"
            android:src="@drawable/logo_addset"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:textColor="#000"
            android:textSize="13sp"
            android:text="新建列表"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.02sp"
        android:layout_marginTop="5dp"
        android:background="#3000"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fileSGV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:focusable="true"
        android:background="#fff" />
</LinearLayout>